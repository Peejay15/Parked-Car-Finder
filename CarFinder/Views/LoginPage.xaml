<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CarFinder.Views.LoginPage" BackgroundColor="#FFFFFF">
   <StackLayout Padding="40,0,40,0">
        <Image Source="carFinder.png"></Image>
            <Label x:Name="Lbl_Username" Text="Username" TextColor="Black" FontSize="20"/>
            <Entry x:Name="Entry_Username" Placeholder="Username" TextColor="Black"/>
            <Label x:Name="Lbl_Password" Text="Password" TextColor="Black" FontSize="20"/>
            <Entry x:Name="Entry_Password" Placeholder="Password" />
            <Button x:Name="Btn_Signin" Text="Sign in" Clicked="SignInClicked" TextColor="Black" BackgroundColor="#1E90FF"/>

            <Label Text="No Account?" HorizontalOptions="Center" FontSize="20"/>

            <Button Text="Create Account" Clicked="CreateAccountClicked" TextColor="Black" BackgroundColor="#1E90FF" />
   </StackLayout>
</ContentPage>
